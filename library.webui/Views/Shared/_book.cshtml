@model Book

<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.ImageUrl">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign mr-1"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Library" asp-action="Details" asp-route-url="@Model.Url"
            class="btn btn-primary btn-sm">Details</a>
        <a asp-controller="Library" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Add To
            Cart</a>
    </div>
</div>