@model CategoryListViewModel

<div class="row">
    <hr>
    <h1 style="h3">Admin Categories</h1>
    <hr>
    <a href="/admin/categories/create" class="btn btn-primary btn-sm">Add Category</a>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <td style="width: 30px;">Id</td>
                <td>Name</td>
                <td style="width: 150px;"></td>
            </tr>
        </thead>
        <tbody>

            @if (Model.Categories.Count > 0)
            {
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/admin/categories/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>

                            <form asp-controller="admin" asp-action="deletecategory" method="POST" style="display: inline;">
                                <input type="hidden" name="Id" value="@item.Id">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <h3>No Categories</h3>
                </div>
            }




        </tbody>
    </table>

</div>