@model BookListViewModel

<div class="row">
    <hr>
    <h1>Admin Books</h1>
    <hr>
    <br>
    <a href="/admin/books/create" class="btn btn-primary btn-sm">Add Book</a>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <td style="width: 30px;">Id</td>
                <td style="width: 100px;">Image</td>
                <td>Name</td>
                <td style="width: 20px;">Price</td>
                <td style="width: 100px;">Is Home</td>
                <td style="width: 125px;">Is Approved</td>
                <td style="width: 150px;"></td>
            </tr>
        </thead>
        <tbody>

            @if (Model.books.Count > 0)
            {
                @foreach (var item in Model.books)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img src="~/img/@item.ImageUrl" width="80px"></td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>
                            @if (item.IsHome)
                            {
                                <i class="fas fa-check-circle"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle"></i>

                            }
                        </td>
                        <td>
                            @if (item.IsApproved)
                            {
                                <i class="fas fa-check-circle"></i>
                            }
                            else
                            {
                                <i class="fas fa-times-circle"></i>

                            }
                        </td>
                        <td>
                            <a href="/admin/books/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>

                            <form asp-controller="admin" asp-action="deletebook" method="POST" style="display: inline;">
                                <input type="hidden" name="Id" value="@item.Id">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <h3>No Books</h3>
                </div>
            }




        </tbody>
    </table>

</div>