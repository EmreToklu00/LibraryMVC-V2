@model BookDetailModel

<div class="row mt-5">
    <div class="col-md-3">
        <img src="~/img/@Model.book.ImageUrl" class="img-fluid ">
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">@Model.book.Name</h5>
            <hr>

            @foreach (var category in Model.categories)
            {
                <a asp-controller="library" asp-action="list" asp-route-category="@category.Url"
                    class="btn btn-link p-0 mb-3">@category.Name</a>
            }

            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign mr-1"></i>@Model.book.Price
                </h4>
                <button type="submit" class="btn btn-primary btn-lg">Add To Cart</button>
                </h6>
            </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-5">
            <p class="p-3">@Html.Raw(@Model.book.Description)</p>
        </div>
    </div>
